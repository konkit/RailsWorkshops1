-if !notice.blank?
  %p#notice.alert.alert-info= notice

.container
  - if current_user && current_user.admin?
    = link_to 'New Category', new_category_path, class: 'btn btn-default'
    = link_to 'Profiles list', profiles_path, class: 'btn btn-default'

  .row
    %h1 Listing categories
    .col-md-12
      %table.table
        %tr
          %th Name
          %th
          %th
          %th

        - categories.each do |category|
          %tr
            %td= category.name
            %td= link_to 'Show', category, class: 'btn btn-default'

            - if user_signed_in? && current_user.admin?
              %td= link_to 'Edit', edit_category_path(category), class: 'btn btn-default'

            - if user_signed_in? && current_user.admin?
              %td= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default'

      %br


