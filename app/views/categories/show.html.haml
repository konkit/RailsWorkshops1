-if !notice.blank?
  %p#notice.alert.alert-info= notice

.container
  - if current_user && current_user.admin?
    = link_to 'Edit', edit_category_path(category), class: 'btn btn-default'
  = link_to 'Back', categories_path, class: 'btn btn-default'

  .row
    .col-md-6
      %h1= 'Category: ' + category.name
      %h3 Products:
      %ul.list-group
        - category.products.each do |product|
          %li.list-group-item= product.title

      %p
        = link_to 'See products list', category_products_path(category), class: 'btn btn-default'

    - if current_user
      .col-md-6
        %p
          %h3 New product
          = render 'products/form'


