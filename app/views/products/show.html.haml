-if !notice.blank?
  %p#notice.alert.alert-info=notice
-if !flash[:error].blank?
  %p#error.alert.alert-danger= flash[:error]

.container
  - if current_user == product.user
    = link_to 'Edit', edit_category_product_path(category.id, product.id), class: 'btn btn-default'
  = link_to 'Back', category_products_path, class: 'btn btn-default'

  .row
    .col-md-6
      %h1= 'Product: ' + product.title
      %p
        %b Description:
        = product.description
      %p
        %b Price:
        = product.price
      %p
        %b Category:
        = product.category.name

      %h3 Reviews:
      = render reviews

    - if current_user
      .col-md-6
        %h3 New review
        = render 'reviews/form'




