.container
  = link_to 'Back', category_path(products.first.category), class: 'btn btn-default'

  .row
    %h1= 'Products in ' + products.first.category.name
    .col-md-12
      %table.table
        %tr
          %th Title
          %th Description
          %th Price
          %th
          %th
          %th

        - products.each do |product|
          %tr
            %td= product.title
            %td= product.description
            %td= product.price
            %td= link_to 'Show', category_product_path(product.category, product), class: 'btn btn-default'
            %td= link_to 'Edit', edit_category_product_path(product.category, product), class: 'btn btn-default'
            %td= link_to 'Destroy', category_product_path(product.category, product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default'

      %br
